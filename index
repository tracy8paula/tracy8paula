#using raw strings and indexing
print("Helpzwkrldkrld")
print("Helpzwkrldkrld" [0:14:2])

#indexing from the left
print("Helpzwkrldkrld" [2:])
print("Helpzwkrldkrld" [:2])

#indexing from the right(in negatives)
print("Helpzwkrldkrld" [:-3])
print("Helpzwkrldkrld" [-3:])

#printing the index
he = "Helpzwkrldkrld"
print(he.index("p"))

#replacing 
my_cat = "My cat is catatonic"
print(my_cat.replace("cat","dog"))

#spliting characters by space
my_cat = "my cat is catatonic!"
print(my_cat.split())

